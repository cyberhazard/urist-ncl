*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none

html
  font-size: 10px

.Page
  font-family: "Proxima Nova"
  &__heading
    display flex
    align-items center
    font-size: 2.4rem
    font-size: 600
    color black
    line-height: 2rem
    letter-spacing: .1rem
    & svg
      margin-right 2.7rem

.Breadcrumbs
  padding-top 11.5rem
  margin-bottom 2.1rem
  &__link
    font-size: 1.2rem
    color black
    letter-spacing: .15rem
    opacity 0.44
    margin 0 1rem
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0

.Wrapper
  width 100%
  overflow-x: hidden
  min-height: 100vh

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 4.5rem
  padding-right 4.5rem

.call
  & .tingle-modal-box
    border-radius 4px
@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 8px

@media (max-width: 1280px)
  html
    font-size: 7px

@media (max-width: 1024px)
  html
    font-size: 6px

@media (max-width: 1000px)
  html
    font-size: 10px
  .g-wrapper
    max-width: 768px;

@media (max-width: 667px)
  .g-wrapper
    max-width: 320px;
