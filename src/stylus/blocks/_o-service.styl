.o-Service
  padding 7.5rem 0
  &__container
    display flex
    width 72.9rem
    height 25.9rem
    margin 0 auto
    position relative
  &__col
    width 55%
    flex 0 0 auto
    & img
      width 100%
      height 100%
      object-fit: cover
  &__float
    padding 4.7rem 5rem
    background-color #fff
    width 45.4rem
    position absolute
    top 50%
    right 0
    transform: translateY(-50%)
    box-shadow: 0 2px 14px rgba(black,.1)
    border-radius 3px
  &__title
    font-size: 1rem
    color black
    opacity 0.3
    font-weight: 300
    font-style: italic
    letter-spacing: .125rem
  &__heading
    font-size: 1.6rem
    font-weight: 600
    color black
    line-height: 3.8rem
    color black
    margin-bottom 1.2rem
  &__text
    font-size: 1rem
    font-weight: 300
    color black
    letter-spacing: .125rem
    margin-bottom 1.4rem
    &:last-child
      margin-bottom 0
