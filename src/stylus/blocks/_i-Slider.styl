.i-Slider
  padding-top 6.8rem
  &__container
    width 84.7%
    margin 0 0 0 auto
    position relative
  &__slide
    padding 3.7rem 0
    background-size: 75.5% auto
    background-position: right top
    background-repeat: no-repeat
  &__number
    padding-left 0.2rem
    font-size: 1.2rem
    color #000
    letter-spacing: .15rem
    margin-bottom 0.6rem
  &__heading
    font-weight: bold
    font-size: 6.1rem
    line-height: 7.4rem
    color #1D3EDE
    margin-bottom 1.6rem
    @supports (-webkit-background-clip: text)
      background-image linear-gradient(135deg, #1D3EDE, #01E4F8)
      -webkit-background-clip: text
      color transparent
  &__text
    font-size: 1.2rem
    letter-spacing: .15rem
    color black
    margin-bottom 4rem
  &__link
    display inline-flex
    align-items center
    font-size: 1.2rem
    color black
    letter-spacing: .15rem
    & svg
      width 7.8em
      height 7.8em
      margin-right 2rem
