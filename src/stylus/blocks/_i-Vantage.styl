.i-Vantage
  padding-bottom 4rem
  &__heading
    font-size: 2.4rem
    font-weight: 300
    color black
    margin-bottom 1.8rem
  &__blocks
    display flex
    flex-wrap: wrap
    justify-content space-between
    margin-bottom 7rem
  &__block
    display flex
    flex-direction: column
    justify-content center
    align-items center
    width calc((100% / 3) - 2rem)
    height 13rem
    border 1px solid #D9DEE1
    border-radius 4px
    margin-bottom 1.6rem
    color black
    font-size: 1.2rem
    letter-spacing: .15rem
    &_last
      border none
      align-items flex-start
    & svg
      margin-bottom 1.7rem
  &__more
    display flex
    align-items center
    & svg
      margin 0
  &__button
    background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
    padding 1.5rem 3.4rem 1.4rem
    border-radius 2px
    font-size: .9rem
    color #fff
    letter-spacing: .112rem
    margin-right 5rem
