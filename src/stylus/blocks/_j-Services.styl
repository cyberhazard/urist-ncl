.j-Services
  padding-top 7.3rem
  &__heading
    font-size: 1.6rem
    font-weight: 600
    color black
    letter-spacing: .1rem
    text-align center
    margin-bottom 3rem
  &__container
    background-color #FBFBFB
  &__more
    display inline-block
    background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
    font-size: 1.2rem
    font-weight: 300
    color black
    border-radius 4px
    & span
      display inline-block
      background-color #fff
      border-radius 3px
      margin 1px
      border 1px solid transparent
      padding 1rem 2.4rem
  &__black
    font-weight: 900 !important
  &__table
    border-collapse: collapse
    width 100%
    & tbody
      border 1px solid #1D3EDE
    & tr
      height 7.2rem
      background-color #fff
      &:nth-of-type(n+2)
        border-top: 1px solid rgba(#C6CBD4,.3)
      &:last-child
        background-color #FBFBFB
    & th
      font-size: 1.2rem
      font-weight: 600
      color black
      opacity 0.7
      &:nth-child(1)
        width 7.477477477%
      &:nth-child(2)
        text-align left
        width 27.56756757%
      &:nth-child(8)
        width 12.61261261%
    & td, th
      padding 2rem 0
    & td
      font-size: 1.2rem
      font-weight: bold
      color black
      opacity 0.8
      &:nth-child(1),
      &:nth-child(n+3)
        text-align center


@media (max-width: 768px)
  .j-Services
    & .g-wrapper
      padding 0 1rem
    &__table
      & td:nth-child(n+6),
      & td:nth-child(1),
      & th:nth-child(1),
      & th:nth-child(n+6)
        display none
      & th
        text-align center !important
      & td:nth-child(2)
        padding-left 1rem
    &__more
      margin-right 1.2rem
