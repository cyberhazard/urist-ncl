.o-Prices
  margin-bottom 6.7rem
  &__heading
    font-size: 1.6rem
    font-weight: 600
    color black
    letter-spacing: .1rem
    line-height: 3.9rem
    text-align center
    margin-bottom 4rem
  &__container
    background-color #FBFBFB
  &__table
    width 100%
    border-collapse: collapse
    & tbody
      border 1px solid RGB(43, 68, 206)
    & th
      font-size: 1.2rem
      font-weight: 600
      color black
      opacity 0.7
      &:nth-child(1)
        width 7%
      &:nth-child(2)
        width 14.5%
      &:nth-child(7)
        width 13.69%
    & td,th
      padding 2rem 1.6rem
    & tr:last-child td
      border-bottom 1px solid RGB(43, 68, 206) !important
    & td
      border-right 1px solid #C6CBD4
      border-bottom 1px solid #C6CBD4
      font-size: 1.2rem
      font-weight: bold
      //opacity 0.8
      &:first-child
        border-right none
      &:last-child
        border-right 1px solid RGB(43, 68, 206)
      &:nth-child(n+3)
        text-align center
  &__flag
    vertical-align: bottom
  &__full
    padding 0 !important
  &__description-container
    max-height: 0px
    overflow hidden
    transition max-height .3s;
    &.active
      max-height 27.6rem
  &__drop
    margin 0 auto
    width 1.4rem
    height 1.4rem
    background url('/images/odropdown.svg') center center/cover no-repeat
    cursor pointer
    transition: .3s;
    &.active
      background url('/images/odropup.svg') center center/cover no-repeat
  &__description
    padding 3rem 0 4rem
  &__lists
    width 72%
    margin 0 auto
    display flex
    justify-content space-between
    margin-bottom 3.8rem
  &__title
    font-size: 1.2rem
    font-weight: 600
    color black
    opacity 0.51
    line-height: 2.4rem
    margin-bottom 1.1rem
  &__item
    display flex
    align-items center
    position relative
    font-size: 1rem
    font-weight: 300
    font-style: italic
    line-height: 1.3rem
    color RGB(150, 150, 150)
    margin-bottom 1.2rem
    list-style-type: none
    &::before
      content ''
      position absolute
      top 50%
      right calc(100% + 1.8rem)
      width 0.8rem
      height 0.8rem
      border-radius 100%
      background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
      transform translateY(-50%)
  &__footer
    text-align center
  &__footer-button
    display inline-block
    background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
    padding 0.8rem 4.3rem
    font-size: .9rem
    letter-spacing: .112rem
    color #FFFFFF
    border-radius 2px
  &__more
    border 1px solid RGB(134, 234, 247)
    border-radius 4px
    font-size: 1.2rem
    font-weight: 300
    color black
    opacity 0.8
    cursor pointer
    padding .6rem 2.8rem
