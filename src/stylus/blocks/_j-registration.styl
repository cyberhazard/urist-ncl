.j-Registration
  background-color #FBFBFB
  padding-top 8rem
  padding-bottom 8.8rem
  &__heading
    font-size: 1.6rem
    font-weight: 600
    color black
    letter-spacing: .1rem
    line-height: 3.9rem
    text-align center
    margin-bottom 5.6rem
  &__days
    display flex
    justify-content space-between
    align-items flex-start
  &__day
    flex-gap(4, 7.2rem)
    flex 0 0 auto
  &__image
    position relative
    text-align center
    margin-bottom 2.1rem
    & img
      width 86%
  &__dayNumber
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    font-size: 2rem
    color: #fff
    font-weight: 600
  &__list
    list-style-type none
  &__item
    position relative
    font-size: 1.4rem
    font-weight: 300
    font-style: italic
    line-height: 1.3rem
    opacity 0.9
    margin-bottom 1.7rem
    transform: translateX(2rem)
    &::before
      content ''
      position absolute
      top 0
      left -2.8rem
      width 0.8rem
      height 0.8rem
      border-radius 100%
      background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
    &:last-child
      margin-bottom 0


@media (max-width: 667px)
  .j-Registration
    &__days
      display block !important
    &__day
      width 100% !important
      margin-bottom 2.4rem
    &__image img
      width 68% !important
