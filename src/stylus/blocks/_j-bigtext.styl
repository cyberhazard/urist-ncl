.j-BigText
  padding 10rem 0 9rem
  &__container
    width 77.2rem
    margin 0 auto
    text-align center
  &__text
    font-size: 1.4rem
    font-weight: 300
    color black
    letter-spacing: .039rem
    line-height: 2.8rem
    margin-bottom 3rem
    &:last-child
      margin-bottom 0


@media (max-width: 768px)
  .j-BigText
    &__container
      width 80% !important
