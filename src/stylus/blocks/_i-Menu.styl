.i-Menu
  position fixed
  top -100%
  left 0
  width 100%
  height 100vh
  background-image linear-gradient(135deg, #1D3EDE, #01E4F8)
  background: linear-gradient(135deg, rgba(29, 62, 222, 0.95) 0%, rgba(1, 228, 248, 0.95) 100%);
  z-index: 100
  transition: .5s
  will-change: left
  &__close
    cursor pointer
    position absolute
    top: 8rem;
    left: 8.4rem;
    & svg
      height 24px
  &__top
    display flex
    justify-content space-between
    align-items center
  &__title
    font-size 5rem
    font-weight 700
    color white
  &__subtitle
    font-size 1.2rem
    color white
    letter-spacing 0.15rem
  &__line
    max-width 32rem
    width 100%
    height 0.1rem
    background rgba(255,255,255,0.5)
  &__form
    background transparent
    border 0.1rem solid rgba(255,255,255,0.5)
    &_inner
      background transparent
    &_title
      color white
    &_input,&_textarea
      background transparent
      background-image none
      border 0.1rem solid rgba(255,255,255,0.5)
      color white
      &::placeholder
        color white
    &_elem
      background-image none
      background transparent
    &_button
      background-color rgba(255,255,255,0.5)
      color black
      background-image none
  &__navigation
    &_title
      font-size 1.4rem
      margin-bottom 2rem
      color white
    &_element
      display inline-block
      font-size 2.5rem
      letter-spacing 0.15rem
      font-weight 300
      color white
      position relative
      opacity 0.85
      &:after
        content ''
        left 0
        bottom 0.4rem
        width 100%
        height 1px
        background-color white
        position absolute
    &_line
      margin 2.4rem 0 2rem
      width 100%
      background-color rgba(255,255,255,0.5)
      height 1px
  &__links
    display flex
    justify-content space-between
    align-items flex-start
  &__col
    width 30%
  &__wrapper
    display flex
    flex-direction column
    justify-content space-around
    height 100%
.i-Menu .g-wrapper
  height 100%

.Hamburger
  position fixed
  left 7.8rem
  top 7.8rem
  background-color rgba(255,255,255,.5)
  border-radius 2px
  padding 0.75rem .8rem 0.4rem 0.8rem
  cursor pointer

@media (max-width 1000px)
  .Hamburger
    left 2rem
  .i-Menu
    display none

@media (max-width 667px)
  .Hamburger
    left 1.4rem
    top 3.6rem
