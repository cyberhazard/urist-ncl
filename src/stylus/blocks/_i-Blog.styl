.i-Blog
  padding-top 6.4rem
  &__heading
    font-size: 2.4rem
    font-weight: 300
    line-height: 3.8rem
    color black
    text-align center
    margin-bottom 9rem
  &__img
    width 39.3rem
    height 25.7rem
    background-size: cover
    position relative
  &__content
    width 38.4rem
    padding 2.6rem 2.8rem
    background-color #fff
    border-radius 3px
    box-shadow: 0 2px 14px rgba(0,0,0,.07)
  &__date
    font-size: 1rem
    font-weight: 300
    font-style: italic
    letter-spacing: .125rem
    color black
    opacity 0.29
  &__title
    font-size: 1.6rem
    font-weight: bold
    line-height: 3.8rem
    color black
    opacity 0.7
    margin-bottom 1.2rem
  &__text
    font-size: 1rem
    font-weight: 300
    letter-spacing: .125rem
    color black
  &__more
    display flex
    align-items center
    position absolute
    top calc(100% + 2.5rem)
  &__button
    background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
    padding 0.7rem 3.4rem .6rem
    font-size: 1rem
    letter-spacing: .125rem
    color #fff
    border-radius 2px
    margin 0 2.4rem
  &__item
    position relative
    margin-bottom 6.8rem
    &:last-child
      margin-bottom 8.2rem
    &_left
      & ^[0]__content
        position absolute
        top 2.4rem
        left 22.9rem
      & ^[0]__more
        right 0
        & svg:first-child
          display none
    &_right
      & ^[0]__img
        margin 0 0 0 auto
      & ^[0]__content
        position absolute
        top 2.4rem
        right 21.3rem
      & ^[0]__more
        left 0
        & svg:last-child
          display none

@media (max-width 667px)
  .i-Blog
    &__img
      width 100%
      height 12.5rem
    &__item
      display flex
      flex-wrap wrap
      margin-bottom 10rem
    &__img
      order 2
    &__more
      & svg
        display none
    &__heading
      margin-bottom 4.4rem

  .i-Blog__item_left .i-Blog__content
    position: initial
    order 1
  .i-Blog__item_right .i-Blog__content
    position: initial
    order 1
