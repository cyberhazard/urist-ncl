.SecodaryMenu
  position absolute
  width 100%
  top calc(100% + 1.6rem)
  left 0
  z-index 8
  opacity 0
  pointer-events: none
  //- Bug with transition. Blinking breadcrumbs. Try to fix or not
  // transition opacity .3s
  // will-change: opacity
  &.active
    opacity 1
    pointer-events: all
  &__container
    display flex
    padding 2rem 4.5rem 1.5rem 3.2rem
    box-shadow: 0 2px 14px rgba(0,0,0,.1)
    background-color #fff
    outline: none
  &__heading
    font-size: 1.4rem
    font-weight: bold
    letter-spacing: .175rem
    opacity 0.9
    margin-bottom 2.4rem
  &__menu
    width 50%
    flex 0 0 auto
    border-right 1px solid rgba(#979797, .3)
  &__link
    display block
    position relative
    font-size: 1.2rem
    letter-spacing: .15rem
    line-height: 2.7rem
    color black
    opacity 0.9
    margin-bottom 0.6rem
    padding-left 2.4rem
    transition: .15s
    &:hover
      font-weight: bold
      text-decoration: underline
      &::before
        opacity 1
    &::before
      content ''
      position absolute
      top 50%
      left 0
      transform translateY(-50%)
      width 1.1rem
      height 1.1rem
      border-radius 100%
      background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
      transition: opacity .15s
      will-change: opacity
      opacity 0
  &__citiesBlock
    flex-grow: 1
    padding-left 4rem
    background url('/images/menu-map.png') center center no-repeat
  &__cities
    height 33.4rem
    display flex
    flex-direction: column
    align-content space-between
    flex-wrap: wrap
  &__city
    display block
    position relative
    font-size: 1rem
    letter-spacing: .125rem
    line-height: 2.7rem
    color black
    opacity 0.7
    padding-left 1.6rem
    &:hover
      opacity 1
      &::before
        opacity 1
    &::before
      content ''
      position absolute
      top 50%
      left 0
      transform translateY(-50%)
      width 1.1rem
      height 1.1rem
      border-radius 100%
      background-image: linear-gradient(135deg, #1D3EDE, #01E4F8)
      transition: opacity .15s
      will-change: opacity
      opacity 0


