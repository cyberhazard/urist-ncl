.Decor
  &__research
    position fixed
    top 50%
    left 8rem
    display flex
    align-items center
    background-color rgba(255,255,255,.5)
    border-radius 2px
    padding 0.4rem .8rem
    transform-origin: left bottom
    transform rotate(90deg)
    font-size: 1.2rem
    letter-spacing: .15rem
    color black
    & svg
      margin-left 1rem
  &__socials
    position fixed
    top 65%
    right 8rem
    padding 0.4rem .8rem
    background-color rgba(255,255,255,.5)
    border-radius 2px
    transform-origin: right top
    transform rotate(90deg)
    width 34.3rem
    display flex
    justify-content space-between
    align-items center
  &__link
    font-size: 1.2rem
    letter-spacing: .15rem
    color black
