.i-Discount
  padding 6.4rem 0
  background-color #FDFDFD
  &__content
    display flex
    justify-content center
    align-items flex-start
    background url('../../images/discount-bg.jpg') left center/contain no-repeat
    background-size 63rem
    padding 6.8rem 0 6rem
  &__left
    margin-right: 9rem;
    margin-top: -0.4rem;
  &__more
    margin-left 2rem
  &__title
    font-weight: 700;
    font-size: 6.1rem;
    margin-bottom 8.6rem
    color #1d3ede
  &__title
    position relative
    background-image: linear-gradient(135deg,#1d3ede,#01e4f8);
    -webkit-background-clip: text;
    color: transparent;
    letter-spacing 0.15rem
    &:after
      content ''
      position absolute
      right -16rem
      top 50%
      transform translateX(-50%)
      width 10rem
      height 0.1rem
      background-image: linear-gradient(135deg,#1d3ede,#01e4f8);
  &__about
    max-width 31rem
    font-size 1.2rem
    letter-spacing 0.15rem
    margin-bottom 2.4rem
    &_italic
      font-weight: 300;
      font-style: italic;
      margin-bottom 0

@media (max-width 1000px)
  .i-Discount
    &__content
      justify-content space-between
    &__left
      margin-right 0
    &__title
      margin-left 2rem
      text-align center
      margin-bottom 4rem
      &:after
        background transparent

@media (max-width 667px)
  .i-Discount
    padding 6rem 0
    &__left
      display none
    &__content
      background none
