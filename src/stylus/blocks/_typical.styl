.Typical
  padding 5.6rem 0 12rem
  &__wrapper
    display flex
    justify-content flex-start
    align-items flex-start
  &__box
    margin-bottom 5rem
    &:last-of-type
      margin-bottom 9rem
  &__sidebar
    max-width 33.6rem
    height 60rem
    width 100%
    margin-right 6rem
    &_inner
      width 100%
      height 60rem
      background-image: linear-gradient(to right,#1d3ede,#01e4f8);
      padding 5.8rem 2.4rem 4.6rem
      display flex
      justify-content space-between
      flex-direction column
  &__label
    position relative
    font-size 1.4rem
    font-weight 700
    color white
    letter-spacing 0.15rem
    cursor pointer
    &:after
      content ''
      position absolute
      right 0
      top 50%
      transform translateY(-50%)
      width 16px
      height 8px
      background url('../../images/arrow-btm.svg') center center/contain no-repeat

  &__links
    padding 2.2rem 0 1rem 0
  &__link
    display block
    font-size 1.4rem
    font-weight 400
    color white
    margin-bottom 1.2rem
    letter-spacing 0.15rem
  &__content
    width 100%
  &__button
    display inline-block
    font-size 1.2rem
    letter-spacing 0.15rem
    color white
    text-transform uppercase
    padding 1.4rem 3rem
    border 0.1rem solid white
    align-self center
  &__container
    height: 0;
    overflow: hidden;
    transition: height .3s;
    will-change: height;
    &_active
      height 100%
  &__head
    &_left
      margin-right 2rem
  &__menu
    display none
    margin-bottom 4rem
    &_box
      background-image: linear-gradient(to right,#1d3ede,#01e4f8);
      padding-right 3rem
      border-bottom 1px solid rgba(255,255,255,0.6)
      overflow hidden
      transition 0.3s
    &_links
      position relative
      display block
      padding 0 3rem
      height 0
      &:after
        content ''
        display block
        padding-bottom 2rem
      &_active
        display block
  .Typical__menu_box .Typical__label
    padding 3rem
  .Typical__menu_box_active .Typical__menu_links
    height 100%
@media (max-width 1000px)
  .Typical
    &__menu
      display block
    &__sidebar
      display none
      &_inner
        display none
@media (max-width 667px)
  .Typical
    &__menu
      &_box
        padding-right 0
      &_links
        padding: 0 2rem;
    &__link
      font-size 1rem
    &__label
      font-size 1.2rem
      &:after
        right 1rem

